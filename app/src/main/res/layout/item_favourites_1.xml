<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/itemImageFavourites"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemSubIDFavourites"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@drawable/background_sub_id"
        android:gravity="center"
        android:text="@string/list_favourites"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/itemImageFavourites"
        app:layout_constraintEnd_toEndOf="itemImageFavourites"
        app:layout_constraintStart_toStartOf="itemImageFavourites" />

    <ImageView
        android:id="@+id/itemImageDeleteMyFavourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="@id/itemImageFavourites"
        app:layout_constraintTop_toTopOf="@id/itemImageFavourites" />

</androidx.constraintlayout.widget.ConstraintLayout>